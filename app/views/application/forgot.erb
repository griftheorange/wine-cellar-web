<div class="title">
    <h1 class="log brand">LushLux√©</h1>
    <%= image_tag "logo.jpg" %>
</div>

<%= form_tag hint_path do %>
    <%= label_tag "username", "Username: ", class: "log" %>
    <%= text_field_tag "user[username]", nil, class: "log" %>
