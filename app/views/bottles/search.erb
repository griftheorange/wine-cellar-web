<h1>Search by <%= @attribute.drop_type %></h1>
<%= form_tag bottles_path do %>
    <div class="form_center">
        <input type="hidden" name="_method", value="GET">
        <input type="hidden" name="bottle[attr]" value=<%= @attribute %>>
        <input type="hidden" name="search" value="true">
        <%= collection_select :bottle, :specific_attr, Bottle.uniq_attributes(@attribute), :itself, :itself%>
        <%= submit_tag "Search" %>
    </div>
<% end%>
<br>
<div class="links">
    <%= link_to "Back to Home Page", app_home_path %>
</div>