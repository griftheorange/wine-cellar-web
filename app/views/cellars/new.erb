<% if @cellar.id%>
    <h1>Edit this Cellar!</h1>
<% else%>
    <h1>Make a New Cellar!</h1>
<% end%>
<%= form_for @cellar do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <br>
    <%= f.label :description %>
    <br>
    <%= f.text_area :description %>
    <br>
    <% @cellar.id ? str = "Update Cellar" : "Create Cellar"%>
    <%= f.submit str %>
<% end%>
<% if flash[:cellar]%>
    <p class="error"><%= flash[:cellar] %></p>
<% end %>
<%= link_to "Back to all Cellars", cellars_path %>